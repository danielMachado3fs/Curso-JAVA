		System.out.println("\nInforme o segundo número:");
		double num2 = teclado.nextDouble();
		
		System.out.println("\nInforme a operação:");
		String op = teclado.next();
		
		
		
		System.out.println("\nO resultado é: %d, %s, %d" + num1);
		
		teclado.close();
		
	}

}
