package fundamentos;

public class DesafioConverçãoTemperatura {
	public static void main(String[] args) {
		final int ajuste = 32;
		final double fator = 5/9.0; 
		
		/*Para que o java reconheça os números depois da vírgula é necessário 
		 * colocar um dos números no formato inteiro como por exemplo 9.0. Se utilizar 
		 * 5/9 o java vai retornar 0, então deve-se utilizar 5.0/9 ou 5/9.0 ou 5.0/9.0!
		*/
		
		double F,C;		
		
		//Conversao da temperatura
		F = 86;
		C = (F - ajuste) * fator;
		System.out.println("O resultado é: "+ C + "°C");	
		
	}

}
