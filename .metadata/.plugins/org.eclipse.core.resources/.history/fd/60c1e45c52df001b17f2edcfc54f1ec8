package fundamentos;

public class NotacaoPonto {
	
	public static void main(String[] args) {
		/*
		 * Notação Ponto
		 * 
		 * Serve para utlizar funções da linguagem java.
		 */
		
		String a = "Bom dia x";
		//Nesse caso, utilizando o "." é possível utilizar funções para variáveis do tipo String.
		a = a.toUpperCase(); //Tornar todas as letras maiúsculas.
		a = a.replace("X", "Senhora"); //Trocar caracteres da String. Nesse caso está trocando o X por Senhora.
		a = a.concat("!!!"); //Concatenar uma String com outra
		System.out.println(a);
		/*
		 * Nas operações anteriores, a variável "a" foi recebendo novos valores a cada linha,
		 * pois as funções utilizadas não armazenam automaticamente as mudanças na variável,
		 * ou seja, o valor da variável é alterado somente na linha que está a sentença.
		 */
		
		//É possivel utilizar as funções em uma mesma linha
		
		String x = "Utilização da y".replace("y", "notação").concat(" ponto").toUpperCase();
		System.out.println(x);
		
		
		
	}

}
