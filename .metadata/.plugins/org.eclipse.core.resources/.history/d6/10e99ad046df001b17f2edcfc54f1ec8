package fundamentos;

public class NotacaoPonto {
	
	public static void main(String[] args) {
		/*
		 * Notação Ponto
		 * 
		 * Serve para utlizar funções da linguagem java.
		 */
		
		String a = "Bom dia x";
		//Nesse caso, utilizando o "." é possível utilizar funções para variáveis do tipo String.
		a = a.toUpperCase(); //Tornar todas as letras maiúsculas.
		a = a.replace(X, "Senhora"); //Trocar caracteres da String. Nesse caso está trocando o X por Senhora.
		a = a.concat("!!!"); //Concatenar uma String com outra
		
		System.out.println(a);
		
		
		
	}

}
